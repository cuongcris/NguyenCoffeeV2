<!-- Carousel Start -->
<div class="container-fluid p-0 mb-5">
    <div id="blog-carousel" class="carousel slide overlay-bottom" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active setheight-img">
                <img class="w-100" src="img/carousel-1.jpg" alt="Image">
            </div>
        </div>
    </div>
</div>
<!-- Menu Start -->
<div class="container-fluid pt-5">
    <div class="container">
        <h1 class="display-4 text-center mb-3">Menu & Pricing</h1>
        <div class="row">
            <div class="col-lg-6 ">
                <h1 class="mb-5 text-center">Hot Coffee</h1>
               
                @foreach (var item in Model.Products.Take(4).OrderBy(s => s.Description.Length))
                {
                    <div class="row align-items-center mb-5">
                        <div class="col-4 col-sm-3">
                            <img style="width:146px;height:112px;" class="imageWith rounded-circle mb-3 mb-sm-0" src="@item.Image" alt="">
                            <h5 class="menu-price">@item.UnitPrice k</h5>
                        </div>
                        <div class="col-8 col-sm-9">
                            <h4>@item.ProductName</h4>
                            <p class="description m-0">@item.Description</p>
                        </div>
                    </div>
                }
            </div>
            <div class="col-lg-6">
                <h1 class="mb-5 text-center">Cold Coffee</h1>
                @foreach (var item in Model.Products.Skip(4).OrderBy(s=>s.Description.Length))
                {
                    <div class="row align-items-center mb-5">
                        <div class="col-4 col-sm-3">
                            <img style="width:146px;height:112px;" class="imageWith rounded-circle mb-3 mb-sm-0" src="@item.Image" alt="">

                            <h5 class="menu-price">@item.UnitPrice k</h5>
                        </div>
                        <div class="col-8 col-sm-9">
                            <h4>@item.ProductName</h4>
                            <p class="description m-0">@item.Description</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Menu End -->
<!-- Reservation Start -->
