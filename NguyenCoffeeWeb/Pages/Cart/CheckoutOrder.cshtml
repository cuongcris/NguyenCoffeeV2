@page
@model NguyenCoffeeWeb.Pages.Cart.CheckoutOrderModel
@{
}
@{
    ViewData["Title"] = "Checkout Order";
}

<h2 class="text-center mt-3">Chi tiết đơn hàng</h2>

@if (Model.OrderBill != null)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.OrderBill.CoffeeOrderList)
            {
                <tr>
                    <td>@order.Name</td>
                    <td>@order.Quantity</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr >
                <div class="text-center">
                    @if (Model.OrderBill.ImagePath != null)
                    {
                        <img src="@Model.OrderBill.ImagePath" alt="Order Bill Image" />
                    }
                </div>
            </tr>
            <tr>
                <th>Tổng số lượng</th>
                <th>@Model.OrderBill.CoffeeOrderList.Sum(o => o.Quantity)</th>
            </tr>
            <tr>
                <th>Total Bill</th>
            </tr>
        </tfoot>
    </table>
    <div class="text-center mb-5">
        <form method="post" action="">
            <input class="btn btn-primary" type="submit" value="Gửi Order"/>
        </form>
    </div>
}
else
{
    <h3 class="text-center mt-5 mb-5">Không có đơn hàng nào được tìm thấy.</h3>
    <div class="text-center">
        <a class=" btn btn-primary mb-5" value="" asp-page="/Menu">Quay về Menu</a>
    </div>
}