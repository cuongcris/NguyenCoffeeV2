@page
@model NguyenCoffeeWeb.Pages.Authentication.ProfileModel
@{
}

<style>
    .setheight-img {
        height: 120px;
    }
</style>
<section class="vh-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card">
                    <h2 class="card-title text-center">Profile</h2>
                    <div class="card-body py-md-4">
                        <p class="alert-success">@ViewData["msgOk"]</p>
                        <form class="mx-1 mx-md-4" method="post">
                            <div class="form-group">
                                <label class="form-label" for="form3Example3c">Email</label>
                                <input type="text" asp-for="Account.Email" id="form3Example2c" class="form-control" readonly/>
                                <span asp-validation-for="Account.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="form-label" for="form3Example3c">Full Name</label>
                                <input type="text" asp-for="Account.FullName" id="form3Example3c" class="form-control" />
                                <span asp-validation-for="Account.FullName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="form-label" for="form3Example3c">Phone</label>
                                <input type="text" asp-for="Account.Phone" id="form3Example3c" class="form-control" />
                                <span asp-validation-for="Account.Phone" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="form-label" for="form3Example3c">Address</label>
                                <input type="text" asp-for="Account.Address" id="form3Example3c" class="form-control" />
                                <span asp-validation-for="Account.Address" class="text-danger"></span>
                            </div>

                            <div class="pt-1 mb-4">
                                <button class="btn btn-dark btn-lg btn-block" type="submit">Change Profile</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
